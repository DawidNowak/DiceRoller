<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.Views.GamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Path=Game.Name}" FontSize="Medium" HorizontalTextAlignment="Center"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Text="-" Command="{Binding DecreaseDiceCommand}"></Button>
                <Label Grid.Column="2" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding Path=DiceNumber}"></Label>
                <Button Grid.Column="3" Text="+" Command="{Binding IncreaseDiceCommand}"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>